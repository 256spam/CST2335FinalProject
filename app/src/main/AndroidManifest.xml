<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.cst2335finalproject">
    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        android:usesCleartextTraffic="true">

        <activity
            android:name=".FlightSearchActivity"
            android:label="Flight Tracker"
            android:parentActivityName=".MainActivity"/>
        <activity
            android:name=".FlightDetailsActivity"
            android:label="Flight Tracker"
            android:parentActivityName=".MainActivity"/>
        <activity
            android:name=".FlightTrackerActivity"
            android:label="FST"
            android:parentActivityName=".MainActivity"/>

        <activity
            android:name=".DictionaryActivity"
            android:label="Dictionary"
            android:parentActivityName=".MainActivity"/>
        <activity
            android:name=".DictionaryEmptyActivity"
            android:label="Dictionary"
            android:parentActivityName=".MainActivity"/>

        <activity
            android:name=".NewsfeedActivity"
            android:label="News Feed"
            android:parentActivityName=".MainActivity" />
        <activity
            android:name=".NewsfeedEmptyActivity"
            android:label="News Feed"
            android:parentActivityName=".MainActivity"/>
        <activity
            android:name=".NewsfeedSavedArticles"
            android:label="News Feed"
            android:parentActivityName=".MainActivity"/>
        <activity
            android:name=".NewsfeedReadArticle"
            android:label="News Feed"
            android:parentActivityName=".MainActivity"/>

        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

    </application>

</manifest>