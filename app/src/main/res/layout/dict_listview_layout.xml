<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/main_dic"
        tools:layout_editor_absoluteX="3dp"
        tools:layout_editor_absoluteY="0dp" />

    <TextView
        android:id="@+id/dictDefinitonTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_row="0"
        android:layout_column="1"
        android:text="-Example Title-"
        android:layout_toEndOf="@id/icon"/>

    <TextView
        android:id="@+id/dictDefinitonShort"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/dictDefinitonTitle"
        android:layout_toEndOf="@id/icon"
        android:text="-Example short definition-" />


</RelativeLayout>