<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="10dp">

    <TextView
        android:id="@+id/newsDetailDialogtitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/newsDetailDialogTitle"
        android:textAlignment="center"
        android:textSize="30dp" />

    <TextView
        android:id="@+id/dialogNewsItem"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/newsDetailDialogtitle"
        android:text="TEST"
        android:textAlignment="textStart"
        android:textSize="12dp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/dialogNewsSubItem"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/dialogNewsItem"
        android:text="TEST 2"
        android:textAlignment="textStart"
        android:textSize="12dp"
        android:textStyle="italic" />

    <Button
        android:id="@+id/newsfeedDialogOkButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/dialogNewsSubItem"
        android:text="View Article"
        tools:textAlignment="center" />

    <Button
        android:id="@+id/newsfeedDialogAddItem"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/newsfeedDialogOkButton"
        android:text="Save Article"
        tools:textAlignment="center" />

    <Button
        android:id="@+id/newsfeedDialogDeleteItem"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/newsfeedDialogAddItem"
        android:text="Delete"
        tools:textAlignment="center" />

    <Button
        android:id="@+id/newsfeedDialogCancelButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/newsfeedDialogDeleteItem"
        android:text="Cancel"
        tools:textAlignment="center" />


</RelativeLayout>